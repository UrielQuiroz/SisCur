<h2>Alumnos</h2>
<input type="hidden" name="name" value="@ViewBag.FullName" />


<form class="form-inline">
    <label for="inputPassword6">Seleccione Sexo:</label>
    <div class="form-group">
        <select id="cboSexo" class="form-control form-control-sm mx-sm-3"></select>
        <input type="button" id="btnBuscar" value="Buscar" class="btn btn-primary" />
        <input type="button" id="btnLimpiar" value="Limpiar" class="btn btn-success" />
    </div>
</form>


<button type="button" onclick="abrirModal(0)" class="btn btn-primary mr-auto" data-toggle="modal" data-target="#exampleModal">
    NUEVO
</button>

<br />
<br />

<div id="tabla">

</div>



<!-- Modal -->
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Alumno</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <table style="width: 80%; margin: auto">
                    <tr>
                        <td style="width: 40%;">ID Alumno</td>
                        <td style="width: 60%;"><input type="text" class="limpiar form-control" id="txtIdAlumno" disabled readonly /></td>
                    </tr>
                    <tr>
                        <td>Nombre</td>
                        <td><input type="text" class="limpiar obligatorio error form-control" id="txtNombre" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Paterno</td>
                        <td><input type="text" class="limpiar obligatorio error form-control" id="txtAPaterno" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Materno</td>
                        <td><input type="text" class="limpiar obligatorio error form-control" id="txtAMAterno" /></td>
                    </tr>
                    <tr>
                        <td>Fecha Nacimiento</td>
                        <td><input type="text" class="limpiar obligatorio error form-control" id="dtpFechaNAcimiento" /></td>
                    </tr>
                    <tr>
                        <td>Sexo</td>
                        <td>
                            <label class="form-check-label">Masculino</label>
                            <input type="radio" id="rbM" class="form-check-input" name="rdbSexo" checked />
                            <label class="ml-5 form-check-label">Femenino </label> 
                            <input type="radio" id="rbF" class="form-check-input" name="rdbSexo"/>
                            @*<select class="limpiar obligatorio error form-control" id="cboSexoPopup"></select>*@
                        </td>
                    </tr>
                    <tr>
                        <td>Telefono Padre</td>
                        <td><input type="number" class="limpiar obligatorio error form-control" id="txtTelPadre" /></td>
                    </tr>
                    <tr>
                        <td>Telefono Madre</td>
                        <td><input type="number" class="limpiar obligatorio error form-control" id="txtTelMadre" /></td>
                    </tr>
                    <tr>
                        <td>Numero de hermanos</td>
                        <td><input type="number" class="limpiar obligatorio error form-control" id="txtNoHermanos" /></td>
                    </tr>
                </table>
            </div>

            <div class="modal-footer">
                <button id="btnCancelat" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button onclick="Agregar()" type="button" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>

