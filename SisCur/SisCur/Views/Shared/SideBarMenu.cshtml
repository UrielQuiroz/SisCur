
@using SisCur.Models


@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SISTEMA MATRICULA</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<script src="~/Scripts/ModalBeheivor.js"></script>*@


    <!--bootstrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <!-- Ionic icons -->
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">


    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>

    <div class="d-flex" id="content-wrapper">

        <!-- Sidebar -->
        <div id="sidebar-container" class="border-right">
            <div class="logo mt-3">
                <h4 class="font-weight-bold mb-2 text-center"><a style="text-decoration: none;" href="/PantallaPrincipal/Index">Enrollmen</a></h4>
            </div>
            <div class="menu list-group-flush">


                @{
                    int cantidad = VariableModel.accriones.Count();
                    for (int i = 0; i < cantidad; i++)
                    {
                        @Html.ActionLink(VariableModel.mensjae[i], VariableModel.accriones[i], VariableModel.controladores[i], new { area = "" }, new { @class = "list-group-item list-group-item-action text-muted bg-light p-3 border-0" })
                    }
                }

            </div>
        </div>
        <!-- Fin sidebar -->
        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100 bg-light-blue">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container">
                    <button class="btn btn-primary text-white" id="menu-toggle">Mostrar / Ocultar menu</button>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link text-dark" href="#">Inicio</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @ViewBag.FullName
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Mi perfil</a>
                                    <a class="dropdown-item" href="#">Suscripciones</a>
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Cerrar Sesión", "Cerrar", "Login", new { area = "" }, new { @class = "dropdown-item" })
                                    @*<a class="dropdown-item" href="#">Cerrar sesión</a>*@
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>

        </div>

        <!-- Fin Page Content -->
    </div>

    @*@Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@
</body>
</html>


<!-- Abrir / cerrar menu -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#content-wrapper").toggleClass("toggled");
    });
</script>



